@inherits TablePagerBase

<div class="d-flex">
    <div>
        <div class="btn-group">
          <button class="btn btn-secondary btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            @(Limit * Page) - @(Limit * Page + Limit) of @TotalItems, Pages: @TotalPages
          </button>
          <div class="dropdown-menu">
            <button class="dropdown-item" type="button" @onclick="() => SetLimit(10)">10</button>
            <button class="dropdown-item" type="button" @onclick="() => SetLimit(20)">20</button>
            <button class="dropdown-item" type="button" @onclick="() => SetLimit(50)">50</button>
            <button class="dropdown-item" type="button" @onclick="() => SetLimit(250)">250</button>
          </div>
        </div>
        
    </div>
    <div class="ml-auto">
        <nav>
            <ul class="pagination justify-content-end pagination-sm">
                @{ 
                    if(Page == 0)
                    {
                        <li class="page-item disabled" >
                          <span class="page-link">First</span>
                        </li>
                    } else
                    {
                        <li class="page-item" @onclick="() => GoToPage(0)">
                          <span class="page-link">First</span>
                        </li>
                    }


                    if(Page > 9)
                    {
                        <li class="page-item"><a class="page-link" @onclick="() => GoToPage(Page-10)">@(Page-9)</a></li>
                        <li class="page-item"><a class="page-link">...</a></li>
                    }

                    if(Page > 1)
                    {
                         <li class="page-item"><a class="page-link" @onclick="() => GoToPage(Page-2)">@(Page-1)</a></li>
                    }
                    if(Page > 0)
                    {
                         <li class="page-item"><a class="page-link" @onclick="() => GoToPage(Page-1)">@(Page)</a></li>
                    }
                }

                <li class="page-item active" aria-current="page">
                    <span class="page-link">
                        @(Page + 1)
                        <span class=" sr-only">(current)</span>
                    </span>
                </li>

                @{ 
                    if(Page + 1 < TotalPages)
                    {
                        <li class="page-item"><a class="page-link" @onclick="() => GoToPage(Page+1)">@(Page+2)</a></li>
                    }
                    if(Page + 2 < TotalPages)
                    {
                        <li class="page-item"><a class="page-link" @onclick="() => GoToPage(Page+2)">@(Page+3)</a></li>
                    }
                    if(Page + 10 < TotalPages)
                    {
                        <li class="page-item"><a class="page-link">...</a></li>
                        <li class="page-item"><a class="page-link" @onclick="() => GoToPage(Page+9)">@(Page+10)</a></li>
                    }

                    if(Page == TotalPages - 1)
                    {
                        <li class="page-item disabled" >
                          <span class="page-link">Last</span>
                        </li>
                    } else
                    {
                        <li class="page-item" @onclick="() => GoToPage(TotalPages - 1)">
                          <span class="page-link">Last</span>
                        </li>
                    }
                }


            </ul>
        </nav>
    </div>
</div>