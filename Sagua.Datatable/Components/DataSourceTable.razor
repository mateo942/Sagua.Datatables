@inherits Table.DataSourceTable<TModel>
@typeparam TModel

<button @onclick=Refresh>Refresh</button>

<table class="table">
    <thead>
        <tr>
            @{
                foreach (var column in Columns)
                {
                    <th @onclick="() => SetOrder(column)">
                        <span>@column.Title</span>
                        <span>@RenderSort(column)</span>
                    </th>
                }
            }
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var item in Items)
            {
                <tr>
                    @{
                        foreach (var column in Columns)
                        {
                            <td>
                                <span>@column.Render(item)</span>
                            </td>
                        }
                    }
                </tr>
            }
        }
    </tbody>
</table>

<div class="paging">
    <CascadingValue Value="(Abstractions.ITablePaging)this" Name="PagingTable">
        <Sagua.Datatable.Components.SimplePager></Sagua.Datatable.Components.SimplePager>
    </CascadingValue>
</div>

<CascadingValue Value="(Abstractions.ITable<TModel>)this" Name="Table">
    <CascadingValue Value="(Abstractions.ITableOrdered)this" Name="TableOrdered">
        @ChildContent
    </CascadingValue>
</CascadingValue>